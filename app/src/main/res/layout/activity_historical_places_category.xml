<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.categories.HistoricalPlacesCategory">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/historical_fab"
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="#882139"
        android:backgroundTint="@color/kategoryactionbuttoncolor"
        android:clickable="true"
        android:foregroundTint="@color/kategoryactionbuttoncolor"
        android:onClick="showHistorical_Places_Map"
        app:backgroundTint="@color/actionbuttoncolor"
        app:fabCustomSize="69dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="30dp"
        app:rippleColor="@color/kategoryactionbuttoncolor"
        app:srcCompat="@drawable/fabmapicon" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/historical_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3E8EB"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/historical_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:layout_gravity="center"
        android:paddingTop="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/historical_toolbar"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/historical_rv"
        app:layout_constraintEnd_toEndOf="@id/historical_toolbar"
        app:srcCompat="@drawable/castlecategory" />

</androidx.constraintlayout.widget.ConstraintLayout>