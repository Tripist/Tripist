<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.categories.ParksCategory">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/parkmapbutton"
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="#882139"
        android:backgroundTint="#882139"
        android:clickable="true"
        android:foregroundTint="#882139"
        app:backgroundTint="#882139"
        app:fabCustomSize="69dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="30dp"
        app:rippleColor="#882139"
        app:srcCompat="@drawable/fabmapicon"
        android:onClick="showParksMap"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/park_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FADADA"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/park_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:layout_marginTop="?actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/park_toolbar" />


</androidx.constraintlayout.widget.ConstraintLayout>