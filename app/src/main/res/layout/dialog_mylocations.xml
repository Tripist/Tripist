<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:textAlignment="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:background="@color/colorToolbar"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/konum_textview"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:background="@color/colorToolbar"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="300dp"
            android:layout_height="62dp">

            <Button
                android:id="@+id/item_update_button"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="20dp"
                android:background="@color/colorToolbar"
                android:text="Update"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />

            <Button
                android:id="@+id/item_delete_button"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@+id/item_cancel_button"
                android:layout_toEndOf="@+id/item_update_button"
                android:background="@color/colorToolbar"
                android:text="Remove"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />

            <Button
                android:id="@+id/item_cancel_button"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="0dp"
                android:background="@color/colorToolbar"
                android:text="Cancel"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />


        </RelativeLayout>

        <EditText
            android:id="@+id/update_editText"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Please enter the name"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />


    </LinearLayout>


</RelativeLayout>